nextflow_pipeline {

    name "Test workflow: sra.nf"
    script "main.nf"
    tag "workflows"
    tag "workflows_sra"
    tag "sra_default_parameters"

    test("Parameters: default") {

        when {
            params {
                outdir = "$outputDir"
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
