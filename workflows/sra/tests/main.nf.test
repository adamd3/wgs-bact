nextflow_workflow {

    name "Test workflow: sra/main.nf"
    script "workflows/sra/main.nf"
    workflow "SRA"
    tag "workflows"
    tag "workflows_sra"
    tag "sra_default_parameters"

    test("Parameters: default") {

        when {
            workflow {
                """
                input[0] = Channel.from('DRR026872')
                """
            }
            params {
                outdir = "$outputDir"
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match() }
            )
        }
    }
}
