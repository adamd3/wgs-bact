nextflow_workflow {

    name "Test workflow: sra/main.nf"
    script "../main.nf"
    workflow "SRA"
    tag "multiqc_mappings_config"
    tag "sra_fastq_ftp"
    tag "sra_ids_to_runinfo"
    tag "sra_merge_samplesheet"
    tag "sra_runinfo_to_ftp"
    tag "sra_to_samplesheet"
    tag "workflows"
    tag "workflows_sra"
    tag "sra_nf_core_pipeline_taxprofiler"

    test("Parameters: --nf_core_pipeline taxprofiler") {

        when {
            workflow {
                """
                input[0] = Channel.from('DRR026872', 'DRR028935', 'ERR1160846', 'GSE214215', 'GSM4907283', 'SRR12848126', 'SRR13191702', 'SRR14593545', 'SRR14709033', 'SRR9984183')
                """
            }
            params {
                outdir = "results"
                nf_core_pipeline = "taxprofiler"
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match() }
            )
        }
    }
}
