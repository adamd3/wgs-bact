nextflow_process {

    name "Test Process SRA_TO_SAMPLESHEET"
    script "modules/local/sra_to_samplesheet/sra_to_samplesheet.nf"
    process "SRA_TO_SAMPLESHEET"
    tag "sra_to_samplesheet"
    tag "modules_local"

    test("Should run without failures") {

        when {
            params {
                outdir   = "$outputDir"
            }
            process {
                """
                input[1] =
                input[2] =
                input[3] =
                input[4] = file(params.test_data['modules_local']['sra_to_samplesheet'], checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
            )
        }

    }

}
