nextflow_process {

    name "Test Process SRA_TO_SAMPLESHEET"
    script "modules/local/sra_to_samplesheet/sra_to_samplesheet.nf"
    process "SRA_TO_SAMPLESHEET"
    tag "sra_to_samplesheet"

    test("Should run without failures") {

        when {
            params {
                outdir   = "$outputDir"
            }
            process {
                """
                input[0] = 'meta'
                input[1] = 'rnaseq'
                input[2] = 'strandedness'
                input[3] = 'mapping_fields'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
            )
        }

    }

}
