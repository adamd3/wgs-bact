nextflow_process {

    name "Test Process SRA_MERGE_SAMPLESHEET"
    script "modules/local/sra_merge_samplesheet/sra_merge_samplesheet.nf"
    process "SRA_MERGE_SAMPLESHEET"
    tag "sra_merge_samplesheet"
    tag "modules_local"

    test("Should run without failures") {

        when {
            params {
                outdir   = "$outputDir"
            }
            process {
                """
                input[0] = file(params.test_data['modules_local']['sra_merge_samplesheet_samplesheets'], checkIfExists: true)
                input[1] = file(params.test_data['modules_local']['sra_merge_samplesheet_mappings'], checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
            )
        }

    }

}
